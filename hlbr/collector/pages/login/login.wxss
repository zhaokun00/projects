
.root {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 150rpx;
}

.production_image {
  width: 128rpx;
  height: 128rpx;
  margin: 40rpx;
  border-radius: 50%;
}

.account{
  display: flex;
  flex-direction: row;
  padding-left: 10rpx;
  width: 90%;
  height: 80rpx;
  align-items: center;
}

.title{
  /* margin-right: 5rpx; */
  font-weight: bold;
  flex: 1;
  text-align: left;
}

.num {
  flex: 7;
}

.hr{
  border: 1px solid #999999;
  opacity: 0.2;
  width: 90%;
  margin: 0 auto;
}

.btn{
  margin-top: 50rpx;
  color: #999999;
}

.operate{
  display: flex;
  flex-direction: row;
}

.operate view{
  margin: 0 auto;
  margin-top: 40rpx;
  font-size: 14px;
  color: #333333;
}

.login{
  display: flex;
  flex-direction: row;
  margin-top: 150rpx;
}

.login view{
  margin: 0 auto;
}

.tips {
  margin-top: 50rpx;
  /* color: red; */
}